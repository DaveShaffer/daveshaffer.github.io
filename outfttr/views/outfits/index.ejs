<body style="background-image:url(http://images.containerstore.com/medialibrary/images/tcsclosets/slideshow/Image01-TCSClosets-960.jpg); background-size:cover;" id="page-top">

    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="/">HOME</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="page-scroll" href="/items">MY CLOSET</a></li>
                    <li><a class="page-scroll" href="/outfits">MY OUTFITS</a></li>
                    <% if (currentUser) { %>
                      <li><a class= "page-scroll" href="/users/<%= currentUser.id %>"><%= currentUser.local.email %></a></li>
                      <li><a href="/logout">LOG OUT</a></li>
                    <% } else { %>
                        <li><a class="page-scroll" href="/login">LOG IN</a></li>
                    <% } %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <div class="formbg">
      <div class="header-content-inner">
      <ul >
      <div class="row">
      <h1 style="color:#f05f40; text-align:center; font-weight:bold";>My Outfits</h1><hr>
        <% outfits.forEach(function(outfit) { %>
        <form method="POST" action="/outfits/<%= outfit._id %>?_method=DELETE">
          <div class="col-sm-6 col-md-3 set-height itembg">
          <h3><a href="/outfits/<%= outfit._id %>"><%= outfit.name %></a></h3>
              <a href="/outfits/<%= outfit._id %>/edit" class="btn btn-default">Add Items</a>
          <button type="submit" class="btn btn-xs btn-danger">Delete</button>
          </div>
        </form>

        <% }) %>
        </div>
        </ul>
        <center>
        <a href="/outfits/new" class="btn btn-default">Create New Outfit</a>
        </center>
        </div>
        </div>



  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
