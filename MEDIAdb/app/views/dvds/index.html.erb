<p id="notice"><%= notice %></p>

<h1>Listing Media</h1>

<table>
  <thead>
    <tr>
      <th>Medium ID:</th>
      <th>Format:</th>
      <th>Belongs to:</th>
      <th>User ID:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dvds.each do |dvd| %>
      <tr>
        <td><%= dvd.id %></td>
        <td><%= dvd.format %></td>
        <td><%= User.find(dvd.user_id).name %>
        <td><%= dvd.user_id %></td>
        <td><%= link_to 'Show', dvd %></td>
        <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
        <td><%= link_to 'Destroy', dvd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end # End @dvds.each do %>
  </tbody>
</table>

<br>

<button type="button" class="bttn"><%= link_to 'Add New Media', new_dvd_path %></button>
<button type="button" class="bttn"><%= link_to "About MEDIAdb", about_path %></button><br>
<button type="button" class="bttn"><%= link_to 'Show All Users', users_path %></button>
<button type="button" class="bttn"><%= link_to "Change User", signin_path %></button>
<button type="button" class="bttn"><%= link_to "Log Out", signout_path %></button><br>
