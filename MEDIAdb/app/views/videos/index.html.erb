<p id="notice"><%= notice %></p>

<h1>Listing Files</h1>

<table>
  <thead>
    <tr>
      <th>Title:</th>
      <th>Year:</th>
      <th>Length:</th>
      <th>Medium ID:</th>
      <th>Comment:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dvd.videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.year %></td>
        <td><%= video.length %></td>
        <td><%= video.dvd_id %></td>
        <td><%= video.comment %></td>
        <td><%= link_to 'Show', dvd_video_path(@dvd, video) %></td>
        <td><%= link_to 'Edit', edit_dvd_video_path(@dvd, video) %></td>
        <td><%= link_to 'Destroy', dvd_video_path(@dvd, video), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end # End @dvd.videos.each do %>
  </tbody>
</table>

<br>

<button type="button" class="bttn"><%= link_to 'Add New File', new_dvd_video_path(@dvd) %></button>
<button type="button" class="bttn"><%= link_to 'Master File List', about_path %></button><br>
<button type="button" class="bttn"><%= link_to 'Show All Media', dvds_path %></button>
